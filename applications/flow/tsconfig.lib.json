{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "outDir": "./dist",
        "importHelpers": false,
        "sourceMap": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,        
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["dom", "esnext"],
        "esModuleInterop": false,
        "emitDeclarationOnly": false,
        "composite": true,
      "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
      "typeRoots": ["./node_modules/@types", "./src/types", "./src/models", "./"],  
      "baseUrl": ".",
      "paths": {
        "*": ["./src/*"],
        "boost-shared/*": ["./src/*"],
      }
    }
  }